<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8DADA">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Bank Gcek"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#730805"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_person_black_24dp" />
        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hadi Abdulla N"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="2dp"
            android:textColor="#730805"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/emailuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="hadiabdullan97@gmail.com"
            android:textColor="#2B2B2B"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-25dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="30sp">
            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O+"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="#F45F5F"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/mobilenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#FBF6F6"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="20dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="8606759953"
                        android:textColor="#020202"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23/05/1997"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:textSize="18sp"
                        android:textColor="#020202"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="#FBF6F6"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_home_black_24dp"
                        android:drawablePadding="20dp"
                        android:textColor="#020202"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="#FBF6F6"
                        android:text="adreesksdfnjnsfjksjfsnfsfhsfjjsfjsdnf"
                        android:textSize="18sp"
                        />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FAA9A9">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FBF6F6">
                            <TextView
                                android:layout_marginLeft="55dp"
                                android:id="@+id/height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150"
                                android:drawablePadding="20dp"
                                android:drawableLeft="@drawable/ic_height_black_24dp"
                                android:textSize="18sp"
                                android:textColor="#020202"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/height"
                                android:layout_marginEnd="-25dp"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:text="Cm"
                                android:textAlignment="center"
                                android:textColor="#2B2B2B"
                                android:textSize="18sp" />
                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="58"
                                android:layout_alignEnd="@+id/height"
                                android:layout_marginEnd="-110dp"
                                android:drawablePadding="20dp"
                                android:drawableLeft="@drawable/ic_height_black_24dp"
                                android:textSize="18sp"
                                android:textColor="#020202"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/weight"
                                android:layout_marginEnd="-25dp"
                                android:layout_weight="1"
                                android:paddingTop="10dp"
                                android:text="Kg"
                                android:textAlignment="center"
                                android:textColor="#2B2B2B"
                                android:textSize="18sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FBF6F6">
                            <TextView
                                android:layout_marginLeft="55dp"
                                android:id="@+id/dept"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="ECE-A"
                                android:drawablePadding="20dp"
                                android:drawableLeft="@drawable/ic_book_black_24dp"
                                android:textSize="18sp"
                                android:textColor="#020202"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"/>


                            <TextView
                                android:id="@+id/year"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/dept"
                                android:layout_marginEnd="-120dp"
                                android:drawableLeft="@drawable/ic_year_black_24dp"
                                android:drawablePadding="20dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:text="2016"
                                android:textColor="#020202"
                                android:textSize="18sp" />


                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="Last Donated Date: "
                            android:textColor="#020202"
                            android:textSize="18sp" />
                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FBF6F6">
                            <TextView
                                android:id="@+id/donation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23/01/2019"
                                android:drawablePadding="20dp"
                                android:drawableLeft="@drawable/ic_donation_black_24dp"
                                android:textSize="18sp"
                                android:textColor="#020202"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"/>

                            <!-- <ImageView
                                 android:id="@+id/edit_donation"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:clickable="true"
                                 android:focusable="true"
                                 android:foreground="?attr/selectableItemBackground"
                                 app:srcCompat="@drawable/ic_edit_black_24dp"
                                 android:layout_alignParentEnd="true"
                                 android:padding="10dp" /> -->


                        </RelativeLayout>



                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/call_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_phone_black_24dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>